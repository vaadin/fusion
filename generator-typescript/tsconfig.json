{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "importsNotUsedAsValues": "error",
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["scripts/**/*.{ts,js}", "src/**/*.{ts,js}", "tests/**/*.{ts,js}"]
}
